# Изменения: Добавлено создание директории /app/data/ с правами для webuser
FROM python:3.10-slim AS builder

WORKDIR /app
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# Установка зависимостей
COPY web/requirements.web.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir --retries 5 --timeout 30 -r requirements.web.txt

FROM python:3.10-slim

WORKDIR /app
ENV PYTHONPATH=/app \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# Копирование зависимостей из builder
COPY --from=builder /usr/local/lib/python3.10 /usr/local/lib/python3.10
COPY --from=builder /usr/local/bin /usr/local/bin

# Создание пользователя и директории для БД
RUN useradd -m -u 1001 webuser && \
    mkdir -p /app/data && \
    chown -R webuser:webuser /app
USER webuser

# Копирование кода приложения
COPY shared/ /app/shared/
COPY web/ /app/web/

CMD ["uvicorn", "web.web_main:app", "--host", "0.0.0.0", "--port", "8000"]